
@model Entities.Models.Login;


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />

   
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
   

</head>
<body>
    <br /> <br /> <br /> <br />
    <br />
    <img src="https://www.cerner.com/-/media/cerner-media-united-states/home-page/cerner_rgb_standard_-horizontal.png"
         style=" border-radius: 8px;display: block;
                margin-left: 575px;
                margin-right: auto;
                width: 20%;" />
    <br />
    <div class="section">
        <div class="container">
            <div class="row">
                <form class="col s12" id="form1" method="post" asp-controller="user" asp-action="Login">
                    <div class="row">
                        <div class="input-field col s6" style="margin-left: 230px;">
                            <i class="material-icons prefix">account_circle</i>
                            <input placeholder="User Name" id="UserName" type="text" class="validate" asp-for="UserName" required="required">
                            <label for="user_name">User Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 " style="margin-left: 230px;">
                            <i class="material-icons prefix">vpn_key</i>
                            <input id="password" placeholder="Password" type="password" class="validate" asp-for="Password" required="required">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6" style="margin-left: 230px;">
                            <button type="submit" id="submit" data-target="modal1" class="btn modal-trigger green" onclick="return login()" style="margin-left: 230px;">Login</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
    <script type="text/javascript">
        function login() {
            M.toast({
                html: 'Logging in.',
                classes: 'rounded blue',
                "preventDuplicates": true,
            });
            return true;
        }
    </script>
</body>
</html>
