
@model Entities.Models.Opportunity


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css" media="screen,projection" />
</head>
<body>
    <br />
    <img src="https://www.cerner.com/-/media/cerner-media-united-states/home-page/cerner_rgb_standard_-horizontal.png"
         style=" border-radius: 8px;display: block;
                margin-left: 225px;
                margin-right: auto;
                width: 20%;" />
    <br />
    <div class="container">
        <nav>
            <div class="nav-wrapper green">
                <ul id="nav-mobile" class="left hide-on-med-and-down">
                    <li class="active"><a asp-controller="Admin" asp-action="Admin">Create Opportunity</a></li>
                    <li class="active"><a asp-controller="Admin" asp-action="Requests">View Opportunity</a></li>
                </ul>
            </div>
        </nav>
    </div>
    <br /> <br /> <br /> <br />
    <div class="container" id="myDIV">
        <a class="waves-effect waves-light btn green" asp-controller="admin" asp-action="Create">
            <i class="material-icons right">add</i>Create
        </a>
        <table class="striped">
            <thead>
                <tr>
                    <td><b>Opportunity Description</b></td>
                    <td><b>Start Date</b></td>
                    <td><b>End Date</b></td>
                    <td><b>Skill</b></td>
                    <td><b>IsVacant</b></td>
                    <td><b>Update</b></td>
                    <td><b>Edit</b></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var opportunity in ViewBag.opportunities)
                {
                <tr>
                    <td>@opportunity.OpportunityDescription</td>
                    <td>@opportunity.StartTime.ToString("yyyy-MM-dd")</td>
                    <td>@opportunity.EndTime.ToString("yyyy-MM-dd")</td>
                    <td>@opportunity.Skill</td>
                    <td>@opportunity.IsVacant</td>
                    <td>
                        <a class="waves-effect waves-light btn green" asp-controller="admin" asp-action="Update" asp-route-id="@opportunity.o_id">
                            <i class="material-icons right">update</i>Update
                        </a>
                    </td>
                    <td>
                        <a class="waves-effect waves-light btn red" asp-controller="admin" asp-action="Delete"
                           asp-route-id="@opportunity.o_id" onclick="return confirm('Are you sure?')">
                            <i class="material-icons right">delete</i>Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myDIV");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>

</body>
</html>
